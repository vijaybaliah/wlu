.product-single__add-to-cart {
  display: flex;
  flex-direction: column;
  flex-flow: wrap;
}

.product-single__add-to-cart > button,
.product-single__add-to-cart > div {
  margin-right: 0!important;
}

#widget-fave-html {
  width: 100% !important;
  margin-top: 10px;
}

.ssw-fave-btn {
  width: 100%;
  line-height: 42px !important; 
}

#womanlikeu #customer_login_link {
  color: #fff;
}

@media all and (max-width: 590px) {
  .ssw-fave-btn {
    margin-right: 0;
  }
}

#NavDrawer .ssw-topauth a:active,
#NavDrawer .ssw-topauth a:focus,
#NavDrawer .ssw-topauth a:hover {
  background: none!important;
}

#NavDrawer .ssw-topauth .ssw-dropdown-menu {
  width: 100%;
  display: block!important;
  position: relative;
  box-shadow: none;
  border: none;
  background: none;
  padding-left: 10px;
  left: -15px;
}
#NavDrawer .ssw-topauth .ssw-dropdown-menu li a {
  color: #d6d3d3;
}
#NavDrawer .ssw-topauth .ssw-dropdown-menu .ssw-divider {
  display: none!important;
}